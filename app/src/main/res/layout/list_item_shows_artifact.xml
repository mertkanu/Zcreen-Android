<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="248dp"
    android:orientation="vertical"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/list_item_tvshow_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/cell_title_background"
            android:paddingLeft="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/list_item_tv_icon_imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/kanald"
                app:civ_border_color="#f1f1f1"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/list_item_show_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/list_item_tv_icon_imageView"
                android:textColor="@color/secondary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/ltaqua"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp">


        <TextView
            android:id="@+id/list_item_show_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="asdfgsg"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/list_item_air_timeday_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:text="asdfgsg"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>
</android.support.v7.widget.CardView>
